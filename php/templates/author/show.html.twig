{% extends 'base.html.twig' %}

{% block title %}{{ author.name }}{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ author.name }}</h1>
    
    <div class="card">
        <div class="card-body">
            <p><strong>Created At:</strong> {{ author.createdAt|date('Y-m-d H:i:s') }}</p>
        </div>
    </div>
    
    <div class="mt-3">
        <a href="{{ path('author_index') }}" class="btn btn-secondary">Back to List</a>
        <form method="post" action="{{ path('author_delete', {'id': author.id}) }}" style="display: inline;">
            <input type="hidden" name="_token" value="{{ csrf_token('author_delete') }}">
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
        </form>
    </div>
</div>
{% endblock %}