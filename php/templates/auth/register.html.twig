{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
  <h1>Create an account</h1>

  {% if errors is defined and errors %}
    <div class="alert alert-danger">
      <ul>
        {% for e in errors %}<li>{{ e }}</li>{% endfor %}
      </ul>
    </div>
  {% endif %}

  <form method="post" action="{{ path('app_register') }}">
      <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div>
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required value="{{ last_email|e }}" />
    </div>

    <div>
      <label for="password">Password</label>
      <input type="password" id="password" name="password" minlength="6" required />
    </div>

    <div>
      <label for="password_confirm">Confirm password</label>
      <input type="password" id="password_confirm" name="password_confirm" minlength="6" required />
    </div>

    <div>
      <button type="submit">Register</button>
    </div>
  </form>

  <p>Already have an account? <a href="{{ path('app_login') }}">Login here</a>.</p>
{% endblock %}
