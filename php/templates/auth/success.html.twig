{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block body %}
  <h1>Welcome</h1>
  {% if user_email %}
    <p>You are logged in as <strong>{{ user_email }}</strong>.</p>
    <p>Your session ID is <code>{{ session_id }}</code>.</p>
    <form method="post" action="{{ path('app_logout') }}">
      <input type="hidden" name="_token" value="{{ csrf_token('logout') }}" />
      <button type="submit">Logout</button>
    </form>
  {% else %}
    <p>You are not logged in. <a href="{{ path('app_login') }}">Login</a></p>
  {% endif %}
{% endblock %}
